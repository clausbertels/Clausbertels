<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8" />

  <title>
    {{ site_title }} {% if current_page.title %}| {{ current_page.title }}{% endif %}
  </title>

  <meta name="viewport" content="initial-scale=1" />
  <meta name="author" content="Claus Bertels" />
  {% block meta %}
  {% endblock %}

  {# Styles #}
  <link rel="stylesheet" href="{{ theme_url }}/nav.css" type="text/css" />
  {# <link rel="stylesheet" href="{{ theme_url }}/fonts.css" type="text/css" media="none" onload="if(media!='all')media='all'" /> #}
  <style type="text/css">
    :root {
      --default-slab: 'Knile', 'Book Antiqua', serif;
      --default-sans: -apple-system, 
                      BlinkMacSystemFont, 
                      "Segoe UI", 
                      Roboto, 
                      Oxygen, 
                      Ubuntu, 
                      Cantarell, 
                      "Open Sans", 
                      "Helvetica Neue", 
                      sans-serif;

      --smooth-out: cubic-bezier(0,0,.33,1);
      --smooth-in: cubic-bezier(.66,0,1,1);
    }

    html {
      box-sizing: border-box;
    }

    *, *:before, *:after {
      box-sizing: inherit;
      font-family: var(--default-sans);
    }

    body {
      background: #f7f9f9;
      perspective: 380px;
      perspective-origin: center 100px;
    }

    body, ul, li, a, div,
    h1, h2, h3, h4, h5, h6, p, section, time,
    figure, img, figcaption  {
      margin: 0;
      padding: 0;
      border: 0;
      line-height: 1;
    }

    @media screen and (min-width: 667px) {
      nav, .grid, footer {
        width: calc(100vw - (3px * 2));
        max-width: 1680px;
      }

      .initializeMain {
        transform-origin: 50vw 100vh;
        animation: initMain 3400ms cubic-bezier(0,.12,.24,1) forwards;
      }

      @keyframes initMain {
        0%   {opacity: 0;
              transform: translate3d(0,30px,30px);}
        100% {opacity: 1;
              transform: translate3d(0,0,0);}
      }

      .initializeNav {
        animation: initNav 2600ms var(--smooth-in) forwards;
      }

      @keyframes initNav {
        0%, 14% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }
    }
    
    footer {
      margin: 0 auto;
      padding: 2vw;
      text-align: center;
      font: 400 .7rem var(--default-sans);
      color: rgba(0,0,0,.2);
    }
  </style>
  {% block styles %}
  {% endblock %}

  {# Icons  #}
  <link rel="manifest" href="/manifest.json">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="black">

  {% block javascript %}
  {% endblock %}
  <script>
    window.addEventListener("DOMContentLoaded", function(e) {
      if (!sessionStorage.getItem("initialized")) {
        var els = Array.from(document.querySelectorAll('main, footer'));
        for (var i=0; i<els.length; i++) {
          els[i].className += ' ' + 'initializeMain';
        }
        document.querySelector('nav').className += ' ' + 'initializeNav';
        sessionStorage.setItem("initialized", "true");
      }
    });

    document.addEventListener(
      "DOMContentLoaded", function(event) {
        document.querySelectorAll('img').forEach(
          function(img) {
            img.onerror = function() {this.style.visibility='hidden';};
            img.style.filter = "blur(8px)";
            img.onload = function() {this.style.filter = "blur(0)";};
            if (img.complete) {
              img.style.filter = "blur(0)";
            };
          }
        )
      }
    );
  </script>

</head>

<body>

  <nav>
    {% block mainnav %}
    {% endblock %}

    {% block subnav %}
    {% endblock %}
  </nav>

  {% block content %}
  {% endblock %}

  <footer>
    Design, code and content by Claus Bertels. Feel free to copy.
  </footer>

</body>
</html>